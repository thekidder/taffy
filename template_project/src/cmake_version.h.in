/*
 * Creates a header using CMake containing the version information in the root CMakeLists
 */

#ifndef CMAKE_VERSION_H
#define CMAKE_VERSION_H

const static char*        VERSION_NAME         = "${PROJECT_NAME}";
const static char*        VERSION_DISPLAY_NAME = "${PROJECT_DISPLAY_NAME}";
const static char*        VERSION_COMMENT      = "${PROJECT_VERSION_COMMENT}";

const static unsigned int VERSION_MAJOR        = ${CPACK_PACKAGE_VERSION_MAJOR};
const static unsigned int VERSION_MINOR        = ${CPACK_PACKAGE_VERSION_MINOR};
const static unsigned int VERSION_PATCH        = ${CPACK_PACKAGE_VERSION_PATCH};

#endif
